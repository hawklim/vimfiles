set guifont=Source\ Code\ Pro\ for\ Powerline:h14   " 字体及高度
set showtabline=1                                   " 开启自带的tab栏
set guioptions-=T                                   " 隐藏工具栏
set guioptions-=L                                   " 隐藏左边的滚动条
set guioptions-=r                                   " 隐藏右边的滚动条
